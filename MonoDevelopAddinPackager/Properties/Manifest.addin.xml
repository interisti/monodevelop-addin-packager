<?xml version="1.0" encoding="UTF-8"?>
<ExtensionModel>

    <!-- Command Handlers --> 
    <Extension path = "/MonoDevelop/Ide/Commands">
        <Command id = "MonoDevelopAddinPackager.Commands.PackageProject"
             _label = "Package Addin (.mpack)"
             _description = "Generates an mpack file in the build configuration directory for this project." 
             defaultHandler = "MonoDevelopAddinPackager.PackageProjectHandler"
             />
    </Extension>
    <Extension path = "/MonoDevelop/Ide/Commands">
        <Command id = "MonoDevelopAddinPackager.Commands.GenerateWebIndex"
             _label = "Create Addin Web Index (.mrep)"
             _description = "Creates the web server index (.mrep) for the current addin." 
             defaultHandler = "MonoDevelopAddinPackager.CreateWebIndexHandler"
             />
    </Extension>
    <Extension path = "/MonoDevelop/Ide/Commands">
        <Command id = "MonoDevelopAddinPackager.Commands.CleanAddinPackaging"
             _label = "Cleanup Addin Packages"
             _description = "Delete any mpack and mrep files that have been generated for the current project." 
             defaultHandler = "MonoDevelopAddinPackager.CleanAddinPackageHandler"
             />
    </Extension>
    <Extension path = "/MonoDevelop/Ide/Commands">
        <Command id = "MonoDevelopAddinPackager.Commands.DeployAddin"
             _label = "Deploy Addin"
             _description = "Packages, build web index and then pushes the current addin project to a webserver using a custom deployment script." 
             defaultHandler = "MonoDevelopAddinPackager.DeployAddin"
             />
    </Extension>

    <!-- Menu Items -->
	<Extension path = "/MonoDevelop/Ide/MainMenu/Project">
		<CommandItem id = "MonoDevelopAddinPackager.Commands.PackageProject"/>
		<CommandItem id = "MonoDevelopAddinPackager.Commands.GenerateWebIndex"/>
		<CommandItem id = "MonoDevelopAddinPackager.Commands.CleanAddinPackaging"/>
	</Extension>

	<Extension path = "/MonoDevelop/Ide/MainMenu/Tools">
		<CommandItem id = "MonoDevelopAddinPackager.Commands.DeployAddin"/>
	</Extension>

	<!-- Options Panels -->
	<Extension path = "/MonoDevelop/Ide/GlobalOptionsDialog">
		<Section id = "MonoDevelopAddinPackager" _label = "MonoDevelop Addin Packager">
			<Section id = "MonoDevelopAddinPackager.Settings" _label = "Settings" class = "MonoDevelopAddinPackager.MonoDevelopAddinPackagerOptionsPanel" />
		</Section>
	</Extension>

	<!-- Code Issue Providers -->


	<!-- Startup Handler -->
	<Extension path = "/MonoDevelop/Ide/StartupHandlers">
		<Class class = "MonoDevelopAddinPackager.StartupHandler"/>
	</Extension>

</ExtensionModel>